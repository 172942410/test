<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dip" 
    >
    <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_system"
    	android:id="@+id/btn_car_system"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dip" 
        >
     <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_window_up"
    	android:id="@+id/btn_car_window_up"
    	android:layout_weight="1"/>
      <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_window_down"
    	android:id="@+id/btn_car_window_down"
    	android:layout_weight="1"/>
	</LinearLayout>
	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dip" 
        >
     <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_door_lock"
    	android:id="@+id/btn_car_door_lock"
    	android:layout_weight="1"/>
      <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_door_unlock"
    	android:id="@+id/btn_car_door_unlock"
    	android:layout_weight="1"/>
	</LinearLayout>
	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dip" 
        >
     <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_rearview_open"
    	android:id="@+id/btn_car_rearview_open"
    	android:layout_weight="1"/>
      <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_rearview_close"
    	android:id="@+id/btn_car_rearview_close"
    	android:layout_weight="1"/>
	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dip" 
        >
     <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_trunk_open"
    	android:id="@+id/btn_car_trunk_open"
    	/>

	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40dip" 
        >
     <Button 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/string_car_data"
    	android:id="@+id/btn_next_data"
    	android:visibility="invisible"/>

	</LinearLayout>
</LinearLayout>
